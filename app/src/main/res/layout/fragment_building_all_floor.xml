<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <ImageView
        android:id="@+id/imgCoverBuildingAll"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintTop_toBottomOf="@+id/appBarMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <View
        android:background="@color/black_bg_img"
        app:layout_constraintStart_toStartOf="@+id/imgCoverBuildingAll"
        app:layout_constraintTop_toTopOf="@+id/imgCoverBuildingAll"
        app:layout_constraintEnd_toEndOf="@id/imgCoverBuildingAll"
        app:layout_constraintBottom_toBottomOf="@+id/imgCoverBuildingAll"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <TextView
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:id="@+id/tvFloor1"
        android:gravity="left"
        style="@style/TextSp18"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="@dimen/dimen_7dp"
        android:text="@string/txtFloor_1"
        app:layout_constraintStart_toStartOf="@+id/imgCoverBuildingAll"
        app:layout_constraintBottom_toTopOf="@+id/iconNhietdo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginStart="@dimen/dimen_20dp"
        android:scaleType="fitXY"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:id="@+id/iconNhietdo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/dimen_2dp"
        android:src="@drawable/icon_nhietdo"
        app:layout_constraintBottom_toBottomOf="@+id/imgCoverBuildingAll"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@+id/tvFloor1"
        app:layout_constraintWidth_percent="0.08" />
    <TextView
        android:text="abc"
        android:layout_marginStart="@dimen/dimen_5dp"
        android:id="@+id/tvNhietDo1"
        style="@style/TextSp18"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/iconNhietdo"
        app:layout_constraintTop_toTopOf="@+id/iconNhietdo"
        app:layout_constraintBottom_toBottomOf="@+id/iconNhietdo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <ImageView
        android:layout_marginEnd="@dimen/dimen_5dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:scaleType="fitXY"
        android:layout_marginBottom="@dimen/dimen_7dp"
        android:id="@+id/iconDoam"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/dimen_2dp"
        android:src="@drawable/icon_doam"
        app:layout_constraintBottom_toBottomOf="@+id/imgCoverBuildingAll"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/tvDoam"
        app:layout_constraintWidth_percent="0.08" />
    <TextView
        android:text="78 %"
        android:layout_marginEnd="@dimen/dimen_35dp"
        android:id="@+id/tvDoam"
        style="@style/TextSp18"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iconNhietdo"
        app:layout_constraintBottom_toBottomOf="@+id/iconNhietdo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <TextView
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:id="@+id/tvFloor2"
        android:gravity="left"
        style="@style/TextSp18"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="@dimen/dimen_7dp"
        android:text="@string/txtFloor_2"
        app:layout_constraintStart_toStartOf="@+id/imgCoverBuildingAll"
        app:layout_constraintBottom_toTopOf="@+id/iconNhietdo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginStart="@dimen/dimen_20dp"
        android:scaleType="fitXY"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:id="@+id/iconNhietdo2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/dimen_2dp"
        android:src="@drawable/icon_nhietdo"
        app:layout_constraintBottom_toTopOf="@+id/tvFloor1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@+id/tvFloor1"
        app:layout_constraintWidth_percent="0.08" />
    <TextView
        android:text="abc"
        android:layout_marginStart="@dimen/dimen_5dp"
        android:id="@+id/tvNhietDo2"
        style="@style/TextSp18"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/iconNhietdo2"
        app:layout_constraintTop_toTopOf="@+id/iconNhietdo2"
        app:layout_constraintBottom_toBottomOf="@+id/iconNhietdo2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <ImageView
        android:layout_marginEnd="@dimen/dimen_5dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:scaleType="fitXY"
        android:id="@+id/iconDoamF2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/dimen_2dp"
        android:src="@drawable/icon_doam"
        app:layout_constraintBottom_toTopOf="@+id/tvFloor1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/tvDoamF2"
        app:layout_constraintWidth_percent="0.08" />
    <TextView
        android:text="85 %"
        android:layout_marginEnd="@dimen/dimen_35dp"
        android:id="@+id/tvDoamF2"
        style="@style/TextSp18"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iconDoamF2"
        app:layout_constraintBottom_toBottomOf="@+id/iconDoamF2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>
    <androidx.core.widget.NestedScrollView
        app:layout_constraintTop_toBottomOf="@+id/imgCoverBuildingAll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:background="@color/gray"
                android:id="@+id/lableFloor1"
                android:gravity="left"
                style="@style/TextSp18"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="@dimen/dimen_7dp"
                android:text="@string/txtFloor_1"
                app:layout_constraintTop_toBottomOf="@+id/imgCoverBuildingAll"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <androidx.recyclerview.widget.RecyclerView
                android:visibility="visible"
                android:id="@+id/rcvListSWFloor1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lableFloor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:background="@color/gray"
                android:id="@+id/lableFloor2"
                android:gravity="left"
                style="@style/TextSp18"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="@dimen/dimen_7dp"
                android:text="@string/txtFloor_2"
                app:layout_constraintTop_toBottomOf="@+id/rcvListSWFloor1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <androidx.recyclerview.widget.RecyclerView
                android:visibility="visible"
                android:id="@+id/rcvListSWFloor2"
                app:layout_constraintHeight_percent="0.12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lableFloor2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>